<script>
// ▼ 1分ごと自動更新
setInterval(() => refreshAll(), 60000);

// ▼ 全更新ボタン
function refreshAll() {
    document.querySelectorAll("iframe").forEach(f => f.src = f.src);
}

// ▼ 個別更新
function refreshFrame(id) {
    document.getElementById(id).src = document.getElementById(id).src;
}

// ▼ オフライン / オンライン監視
function updateOnlineStatus() {
    const status = document.getElementById("net-status");
    if (navigator.onLine) {
        status.textContent = "オンライン";
        status.className = "status-online";
    } else {
        status.textContent = "オフライン";
        status.className = "status-offline";
    }
}

// 初期状態
window.addEventListener('load', updateOnlineStatus);
window.addEventListener('online', updateOnlineStatus);
window.addEventListener('offline', updateOnlineStatus);
</script>

</head>

<body>

<!-- 上部バー：全更新ボタン + オンライン状態 -->
<div class="top-bar">
    <button onclick="refreshAll()">全部を更新</button>
    <span id="net-status" class="status-online">オンライン</span>
</div>

