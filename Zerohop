  <script>
    // 授業スケジュール
    const schedule = [
      { name: "1限", start: "08:50", end: "09:40" },
      { name: "休憩", start: "09:40", end: "09:50" },
      { name: "2限", start: "09:50", end: "10:40" },
      { name: "休憩", start: "10:40", end: "10:50" },
      { name: "3限", start: "10:50", end: "11:40" },
      { name: "休憩", start: "11:40", end: "11:50" },
      { name: "4限", start: "11:50", end: "12:40" },
      { name: "昼休み", start: "12:40", end: "13:20" },
      { name: "5限", start: "13:20", end: "14:10" },
      { name: "休憩", start: "14:10", end: "14:20" },
      { name: "6限", start: "14:20", end: "15:10" },
      { name: "休憩", start: "15:10", end: "15:20" },
      { name: "7限", start: "15:20", end: "16:10" },
      { name: "休憩", start: "16:10", end: "16:40" },
      { name: "8限", start: "16:40", end: "17:30" },
      { name: "休憩", start: "17:30", end: "17:40" },
      { name: "9限", start: "17:40", end: "18:30" }
    ];

    let isGameStatusOpen = false;
    let isSomeStatusOpen = false;

    function parseTimeToDate(timeStr) {
      const [h, m] = timeStr.split(":").map(Number);
      const now = new Date();
      now.setHours(h, m, 0, 0);
      return now;
    }

    function getCurrentPeriod(now) {
      for (const period of schedule) {
        const start = parseTimeToDate(period.start);
        const end = parseTimeToDate(period.end);
        if (now >= start && now < end) {
          return { ...period, startTime: start, endTime: end };
        }
      }
      return null;
    }

    function updateCountdown(now) {
      const period = getCurrentPeriod(now);
      const countdownEl = document.getElementById("countdown");
      const progressEl = document.getElementById("progress");

      if (period) {
        const remainingMs = period.endTime - now;
        const totalMs = period.endTime - period.startTime;
        const percent = 100 - Math.floor((remainingMs / totalMs) * 100);

        const totalSec = Math.floor(remainingMs / 1000);
        const h = String(Math.floor(totalSec / 3600)).padStart(2, '0');
        const m = String(Math.floor((totalSec % 3600) / 60)).padStart(2, '0');
        const s = String(totalSec % 60).padStart(2, '0');

        countdownEl.textContent = `${period.name} 残り: ${h}:${m}:${s}`;
        document.title = `${period.name} Left: ${h}:${m}:${s}`;
        progressEl.style.width = `${percent}%`;
      } else {
        countdownEl.textContent = "現在は授業時間外です";
        document.title = "授業時間外";
        progressEl.style.width = "0%";
      }
    }

    function updateClockAndDate() {
      const now = new Date();

      const h = String(now.getHours()).padStart(2, '0');
      const m = String(now.getMinutes()).padStart(2, '0');
      const s = String(now.getSeconds()).padStart(2, '0');
      document.getElementById('clock').textContent = `${h}:${m}:${s}`;

      const year = now.getFullYear();
      const month = String(now.getMonth() + 1).padStart(2, '0');
      const day = String(now.getDate()).padStart(2, '0');
      const weekdays = ['日','月','火','水','木','金','土'];
      const weekday = weekdays[now.getDay()];
      document.getElementById('date').textContent = `${year}/${month}/${day}(${weekday})`;

      updateCountdown(now);
    }

    function showHome() {
      // すべてのタブからactiveクラスを削除
      document.querySelectorAll('.tab-item').forEach(tab => {
        tab.classList.remove('active');
      });
      
      // HOMEタブにactiveクラスを追加
      document.querySelector('.tab-item').classList.add('active');
      
      // すべてのサブメニューを閉じる
      const gameSubmenu = document.getElementById('gameSubmenu');
      const statusSubmenu = document.getElementById('statusSubmenu');
      gameSubmenu.classList.remove('show');
      statusSubmenu.classList.remove('show');
      isGameStatusOpen = false;
      isSomeStatusOpen = false;
      
      // メインコンテンツを表示
      document.getElementById('mainContent').style.display = 'block';
    }

    function toggleSomeStatus() {
      const statusSubmenu = document.getElementById('statusSubmenu');
      const gameSubmenu = document.getElementById('gameSubmenu');
      
      // すべてのタブからactiveクラスを削除
      document.querySelectorAll('.tab-item').forEach(tab => {
        tab.classList.remove('active');
      });
      
      // Game Statusメニューを閉じる
      gameSubmenu.classList.remove('show');
      isGameStatusOpen = false;
      
      if (!isSomeStatusOpen) {
        // Some Statusを開く
        statusSubmenu.classList.add('show');
        isSomeStatusOpen = true;
        
        // Some Statusタブにactiveクラスを追加
        document.querySelectorAll('.tab-item')[1].classList.add('active');
        
        // メインコンテンツを隠す
        document.getElementById('mainContent').style.display = 'none';
      } else {
        // Some Statusを閉じる
        statusSubmenu.classList.remove('show');
        isSomeStatusOpen = false;
        
        // HOMEタブにactiveクラスを追加
        document.querySelector('.tab-item').classList.add('active');
        
        // メインコンテンツを表示
        document.getElementById('mainContent').style.display = 'block';
      }
    }

    function toggleGameStatus() {
      const gameSubmenu = document.getElementById('gameSubmenu');
      const statusSubmenu = document.getElementById('statusSubmenu');
      
      // すべてのタブからactiveクラスを削除
      document.querySelectorAll('.tab-item').forEach(tab => {
        tab.classList.remove('active');
      });
      
      // Some Statusメニューを閉じる
      statusSubmenu.classList.remove('show');
      isSomeStatusOpen = false;
      
      if (!isGameStatusOpen) {
        // Game Statusを開く
        gameSubmenu.classList.add('show');
        isGameStatusOpen = true;
        
        // Game Statusタブにactiveクラスを追加
        document.querySelectorAll('.tab-item')[2].classList.add('active');
        
        // メインコンテンツを隠す
        document.getElementById('mainContent').style.display = 'none';
      } else {
        // Game Statusを閉じる
        gameSubmenu.classList.remove('show');
        isGameStatusOpen = false;
        
        // HOMEタブにactiveクラスを追加
        document.querySelector('.tab-item').classList.add('active');
        
        // メインコンテンツを表示
        document.getElementById('mainContent').style.display = 'block';
      }
    }

    function expandFrame(url) {
      window.open(url, '_blank', 'width=1200,height=800,scrollbars=yes,resizable=yes');
    }

    function setupGoogleIconInteraction() {
        const googleContainer = document.getElementById('google-container');
        const googleLink = document.getElementById('google-link');
        let clickTimer = null;
        const doubleClickThreshold = 250; // 250ms

        googleLink.addEventListener('click', function(event) {
            event.preventDefault(); // Stop the link from opening immediately

            if (clickTimer) {
                // Double click detected
                clearTimeout(clickTimer);
                clickTimer = null;
                
                window.open(googleLink.href, '_blank'); // Open Google in new tab
                googleContainer.classList.remove('radial-active'); // Close radial menu
            } else {
                // First click, set a timer
                clickTimer = setTimeout(() => {
                    // Timer finished, it was a single click
                    clickTimer = null;
                    googleContainer.classList.toggle('radial-active');
                }, doubleClickThreshold);
            }
        });

        // Add event listener to close the radial menu if clicking outside
        document.addEventListener('click', function(event) {
            if (googleContainer.classList.contains('radial-active') && !googleContainer.contains(event.target)) {
                googleContainer.classList.remove('radial-active');
            }
        });
    }


    // 初期化と定期実行
    function init() {
      updateClockAndDate();
      showHome();
      setupGoogleIconInteraction(); // Initialize the new Google icon logic
    }

    // 1秒ごとに時計を更新
    setInterval(updateClockAndDate, 1000);

    // ページ読み込み時の初期化
    document.addEventListener('DOMContentLoaded', init);

  </script>

</body>
</html>
